{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "identifier": {
      "type": "biginteger",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "dateline": {
      "type": "date",
      "required": true
    },
    "cai": {
      "type": "string",
      "required": true
    },
    "initialCode": {
      "type": "string"
    },
    "totalTax": {
      "type": "decimal"
    },
    "totalDiscount": {
      "type": "decimal"
    },
    "subtotal": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal"
    },
    "customer": {
      "type": "string",
      "default": "CF"
    },
    "rtnCustomer": {
      "type": "string",
      "minLength": 14,
      "maxLength": 14
    },
    "currentState": {
      "type": "enumeration",
      "default": "PAGADO",
      "enum": [
        "PAGADO",
        "PENDIENTE",
        "CANCELADO"
      ]
    },
    "cancelInfo": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "currentState"
            },
            "CANCELADO"
          ]
        }
      }
    },
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::company.company"
    },
    "detailInvoice": {
      "type": "component",
      "component": "details.invoice-detail",
      "repeatable": true,
      "required": true
    },
    "attach": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "notes": {
      "type": "text"
    }
  }
}
